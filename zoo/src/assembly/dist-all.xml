<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist-all</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>/bin</outputDirectory>
      <directory>${project.parent.basedir}/scripts</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/apps</outputDirectory>
      <directory>${project.parent.basedir}/apps</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/lib</outputDirectory>
      <directory>${project.parent.basedir}/zoo/target</directory>
      <includes>
          <include>analytics-zoo-*-jar-with-dependencies.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/lib</outputDirectory>
      <directory>${project.parent.basedir}/zoo/target</directory>
      <includes>
          <include>analytics-zoo-*-python-api.zip</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/extra-resources</outputDirectory>
      <directory>${project.parent.basedir}/zoo/target/extra-resources</directory>
      <includes>
          <include>zoo-version-info.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/python</outputDirectory>
      <directory>${project.build.directory}/python/sources</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/conf</outputDirectory>
      <directory>${project.parent.basedir}/zoo/src/main/resources</directory>
      <includes>
        <include>spark-analytics-zoo.conf</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>